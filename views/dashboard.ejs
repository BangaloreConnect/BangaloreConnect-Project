<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Admin</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Simple delete button */
        .delete-btn {
            background: #ef4444;
            color: white;
            border: none;
            border-radius: 4px;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }
        
        .delete-btn:hover {
            background: #dc2626;
        }
        
        .alert-message {
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .alert-success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }
        
        .alert-error {
            background: #fee2e2;
            color: #dc2626;
            border: 1px solid #fecaca;
        }
    </style>
</head>
<body>
    <!-- Modern Header -->
    <header class="site-header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">
                    <div class="logo-icon">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <div class="logo-text">
                        <h1>Admin Dashboard</h1>
                        <span>Bangalore Connect Portal</span>
                    </div>
                </a>
                <div class="header-actions">
                    <a href="/" class="btn btn-outline">
                        <i class="fas fa-globe"></i> View Website
                    </a>
                    <a href="/logout" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Dashboard Header -->
    <div class="container">
        <!-- Success/Error Messages -->
        <% if (success) { %>
            <div class="alert-message alert-success">
                <i class="fas fa-check-circle"></i> <%= success %>
            </div>
        <% } %>
        
        <% if (error) { %>
            <div class="alert-message alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>

        <div class="dashboard-header">
            <h1 style="font-size: 2rem; margin-bottom: 0.5rem;">Welcome, Admin!</h1>
            <p style="opacity: 0.9;">Manage job listings and monitor portal activity</p>
        </div>

        <!-- Stats Cards -->
        <div class="dashboard-stats">
            <div class="stat-card-large">
                <h3>Total Jobs Posted</h3>
                <div class="stat"><%= totalJobs %></div>
                <p style="color: var(--gray); font-size: 14px;">Active listings on portal</p>
            </div>
            <div class="stat-card-large">
                <h3>IT Jobs</h3>
                <div class="stat" style="color: var(--primary);"><%= itJobs %></div>
                <p style="color: var(--gray); font-size: 14px;">Technology positions</p>
            </div>
            <div class="stat-card-large">
                <h3>Non-IT Jobs</h3>
                <div class="stat" style="color: var(--warning);"><%= nonItJobs %></div>
                <p style="color: var(--gray); font-size: 14px;">Other career opportunities</p>
            </div>
            <div class="stat-card-large">
                <h3>Featured Jobs</h3>
                <div class="stat" style="color: var(--secondary);"><%= featuredJobs %></div>
                <p style="color: var(--gray); font-size: 14px;">Premium listings</p>
            </div>
        </div>

        <!-- Action Bar -->
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; gap: 1rem;">
            <h2 style="font-size: 1.5rem; color: var(--darker);">All Job Listings (<%= jobs.length %>)</h2>
            <div style="display: flex; gap: 1rem;">
                <a href="/post-job" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Post New Job
                </a>
                <button onclick="exportJobs()" class="btn btn-outline" style="border-color: var(--gray-light); color: var(--gray);">
                    <i class="fas fa-download"></i> Export Data
                </button>
            </div>
        </div>

        <!-- DEBUG SECTION -->
        <div style="background: #f8fafc; padding: 15px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #e2e8f0;">
            <h4 style="margin-bottom: 10px; color: #475569;">
                <i class="fas fa-bug"></i> Debug Info
            </h4>
            <div style="font-size: 14px; color: #64748b;">
                <div>Total Jobs: <strong><%= jobs.length %></strong></div>
                <div>Job IDs in system: 
                    <% jobs.forEach((job, index) => { %>
                        <span style="background: #e2e8f0; padding: 2px 6px; border-radius: 4px; margin: 0 2px; font-size: 12px;">
                            <%= job.id %>
                        </span>
                    <% }); %>
                </div>
            </div>
        </div>

        <!-- Jobs Table -->
        <% if (jobs.length === 0) { %>
            <div style="text-align: center; padding: 3rem; background: white; border-radius: var(--radius-lg); box-shadow: var(--shadow);">
                <i class="fas fa-inbox" style="font-size: 4rem; color: var(--gray-light); margin-bottom: 1.5rem;"></i>
                <h3 style="color: var(--gray-dark); margin-bottom: 0.75rem; font-size: 1.25rem;">No jobs posted yet</h3>
                <p style="color: var(--gray); margin-bottom: 1.5rem;">Start by posting your first job opportunity!</p>
                <a href="/post-job" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create First Job
                </a>
            </div>
        <% } else { %>
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Job Details</th>
                            <th>Type</th>
                            <th>Salary</th>
                            <th>Experience</th>
                            <th>Location</th>
                            <th>Posted Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% jobs.forEach(job => { 
                            let displayDate = 'Recently';
                            if (job.postedDate) {
                                if (typeof job.postedDate === 'number') {
                                    const date = new Date(job.postedDate);
                                    displayDate = date.toLocaleDateString('en-IN', {
                                        day: 'numeric',
                                        month: 'short',
                                        year: 'numeric'
                                    });
                                } else if (typeof job.postedDate === 'string') {
                                    displayDate = job.postedDate;
                                }
                            }
                        %>
                            <tr>
                                <td>
                                    <div style="display: flex; flex-direction: column; gap: 4px;">
                                        <strong style="color: var(--darker);"><%= job.role %></strong>
                                        <span style="color: var(--gray); font-size: 13px;">
                                            <i class="fas fa-building"></i> <%= job.company %>
                                        </span>
                                        <div class="job-date">
                                            <i class="far fa-clock"></i> ID: <strong><%= job.id %></strong>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge <%= job.type === 'IT' ? 'badge-info' : 'badge-warning' %>">
                                        <%= job.type %>
                                    </span>
                                </td>
                                <td style="font-weight: 600; color: var(--secondary);">
                                    ₹<%= job.salary %>
                                </td>
                                <td>
                                    <span style="background: #fef3c7; color: #92400e; padding: 4px 10px; border-radius: 4px; font-size: 12px; font-weight: 500;">
                                        <%= job.experience %>
                                    </span>
                                </td>
                                <td>
                                    <span style="color: var(--gray-dark);">
                                        <i class="fas fa-map-marker-alt" style="color: var(--danger);"></i> <%= job.location %>
                                    </span>
                                </td>
                                <td>
                                    <div style="color: #64748b; font-size: 12px;">
                                        <div><i class="far fa-calendar"></i> <%= displayDate %></div>
                                        <% if (typeof job.postedDate === 'number') { %>
                                            <div style="font-size: 11px; color: #94a3b8;">
                                                <%= new Date(job.postedDate).toLocaleTimeString('en-IN', {hour: '2-digit', minute:'2-digit'}) %>
                                            </div>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <% if (job.featured) { %>
                                        <span class="badge badge-success">Featured</span>
                                    <% } else { %>
                                        <span class="badge" style="background: var(--gray);">Regular</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div style="display: flex; gap: 6px;">
                                        <a href="/job/<%= job.id %>" target="_blank" class="btn btn-primary btn-sm" style="width: 32px; height: 32px;">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="<%= job.applyLink %>" target="_blank" class="btn btn-success btn-sm" style="width: 32px; height: 32px;">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <!-- SIMPLE DELETE BUTTON THAT WORKS -->
                                        <button onclick="deleteJob(<%= job.id %>)" 
                                                class="delete-btn" 
                                                title="Delete Job">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <!-- Modern Footer -->
    <footer class="site-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Admin Tools</h3>
                    <div class="footer-links">
                        <a href="/post-job"><i class="fas fa-plus-circle"></i> Post New Job</a>
                        <a href="/"><i class="fas fa-eye"></i> View Live Site</a>
                        <a href="#" onclick="location.reload()"><i class="fas fa-sync-alt"></i> Refresh Data</a>
                    </div>
                </div>
                <div class="footer-section">
                    <h3>Statistics</h3>
                    <div style="display: grid; gap: 8px;">
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--gray-light);">Total Jobs:</span>
                            <span style="color: white; font-weight: 600;"><%= totalJobs %></span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--gray-light);">Featured:</span>
                            <span style="color: var(--warning); font-weight: 600;"><%= featuredJobs %></span>
                        </div>
                        <div style="display: flex; justify-content: space-between;">
                            <span style="color: var(--gray-light);">Last Updated:</span>
                            <span style="color: white; font-weight: 600;">Just now</span>
                        </div>
                    </div>
                </div>
                <div class="footer-section">
                    <h3>Quick Actions</h3>
                    <div class="footer-links">
                        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        <a href="#" onclick="exportJobs()"><i class="fas fa-file-export"></i> Export Data</a>
                        <a href="#" onclick="testDelete()"><i class="fas fa-vial"></i> Test Delete</a>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <span>© 2024 Bangalore Connect - Admin Panel v2.0</span>
                <span>Session active • Last refresh: <%= new Date().toLocaleTimeString() %></span>
            </div>
        </div>
    </footer>

    <script>
    // SIMPLE DELETE FUNCTION
    function deleteJob(jobId) {
        console.log("Deleting job with ID:", jobId);
        
        if (confirm("Are you sure you want to delete this job?\n\nThis action cannot be undone.")) {
            // Show loading on clicked button
            const btn = event.target.closest('button');
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
            btn.disabled = true;
            
            // Redirect to delete route
            window.location.href = '/delete-job/' + jobId;
        }
    }
    
    // TEST DELETE FUNCTION
    function testDelete() {
        <% if (jobs.length > 0) { %>
            const testJobId = <%= jobs[0].id %>;
            const testJobTitle = "<%= jobs[0].role %>";
            
            if (confirm(`Test delete first job?\n\n"${testJobTitle}"\nID: ${testJobId}`)) {
                window.location.href = '/delete-job/' + testJobId;
            }
        <% } else { %>
            alert("No jobs to test delete");
        <% } %>
    }
    
    function exportJobs() {
        const data = {
            jobs: <%= JSON.stringify(jobs) %>,
            summary: {
                total: <%= totalJobs %>,
                it: <%= itJobs %>,
                nonIt: <%= nonItJobs %>,
                featured: <%= featuredJobs %>
            },
            exportedAt: new Date().toISOString()
        };
        
        const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'jobs-export.json';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
        
        alert('Jobs exported successfully!');
    }
    
    // Log job IDs to console for debugging
    console.log("=== JOB IDs IN PAGE ===");
    <% jobs.forEach((job, index) => { %>
        console.log(`Job <%= index %>: ID=<%= job.id %>, Role="<%= job.role %>"`);
    <% }); %>
    </script>
</body>
</html>