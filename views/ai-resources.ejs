    <script>
        function predictSalary() {
            document.getElementById('salaryResult').style.display = 'block';
            document.getElementById('salaryResult').scrollIntoView({ behavior: 'smooth' });
        }
        
        // Demo match score animation
        document.addEventListener('DOMContentLoaded', function() {
            const matchFill = document.querySelector('.match-fill');
            if (matchFill) {
                matchFill.style.width = '0%';
                setTimeout(() => {
                    matchFill.style.width = '92%';
                }, 500);
            }
        });
